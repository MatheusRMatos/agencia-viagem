    <!-- Buscador -->
    <div class="search-area container-fluid bg-light px-2 py-4 mx-0">
        <form action="/pacotes" method="POST" class="mb-0 w-100" autocomplete="off">
            <div class="row justify-content-center">
                <fieldset class="sec-local-orig col-md-2">
                    <legend>Origem</legend>
                    <div class="orig">
                        <label for="estado">Estado</label>
                        <select class="custom-select d-block w-100" id="estado-orig" name="idEstadoOrigem" required>
                            <option value="" selected disabled hidden> Escolha </option>
                        </select>
                    </div>
                    <div class="orig">
                        <label for="cidade">Cidade</label>
                        <select class="custom-select d-block w-100" id="cidade-orig" name="idCidadeOrigem" required
                            disabled>
                            <option value="" selected disabled hidden> Escolha </option>
                        </select>
                    </div>
                </fieldset>

                <fieldset class="sec-local-dest col-md-2">
                    <legend>Destino</legend>
                    <div class="dest">
                        <label for="estado">Estado</label>
                        <select class="custom-select d-block w-100" id="estado-dest" name="idEstadoDestino" required>
                            <option value="" selected disabled hidden> Escolha </option>
                        </select>
                    </div>
                    <div class="dest">
                        <label for="cidade">Cidade</label>
                        <select class="custom-select d-block w-100" id="cidade-dest" name="idCidadeDestino" required
                            disabled>
                            <option value="" selected disabled hidden> Escolha </option>
                        </select>
                    </div>
                </fieldset>

                <fieldset class="sec-data col-md-2">
                    <legend>Data</legend>
                    <div>
                        <label for="d-orig">Data Origem</label>
                        <input class="data" id="d-orin" type="text" id="dataOrigem" name="dataOrigem" required>
                    </div>
                    <div>
                        <label for="d-dest">Data Destino</label>
                        <input class="data" id="d-dest" type="text" id="dataDestino" name="dataDestino" required>
                    </div>
                </fieldset>

                <fieldset class="sec-pessoas col-md-2">
                    <legend>Hóspedes</legend>
                    <div class="older">
                        <label for="">A partir de 12 anos</label>
                        <input class="input-age" type="number" id="hospedesMaiores" min="1" step="1"
                            name="hospedesMaiores" required>
                    </div>

                    <div class="newer">
                        <label for="">Entre 0 e 11 anos</label>
                        <input class="input-age" type="number" id="hospedesMenores" min="1" step="1"
                            name="hospedesMenores" required>
                    </div>
                </fieldset>


                <div class="container mx-1 col-md-2 ">
                    <div class="row">
                        <fieldset class="sec-classe py-3 col-12">
                            <legend>Quartos</legend>
                            <input class="input-quarto w-100" type="number" min="1" step="1" id="quartos" name="quartos"
                                required>
                        </fieldset>
                    </div>
                    <div class="row">
                        <fieldset class="sec-classe py-3 mt-2 col-12">
                            <legend>Classe</legend>
                            <select class="custom-select d-block w-100" id="idClasse" name="idClasse" required>
                                <option value="" selected disabled hidden> Escolha
                                </option>
                                <option value="0"> Econômica </option>
                                <option value="1"> Executiva </option>
                                <option value="2"> Primeira </option>
                                <option value="3"> Premium </option>
                            </select>
                        </fieldset>
                    </div>
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-md-4"></div>
                <div class="button-search col-md-4 d-flex flex-column justify-content-center">
                    <button class="btn btn-primary" id="btn-search-pacotes" type="submit">
                        <span class="text-search">Procurar Pacotes</span>
                    </button>
                </div>
                <div class="col-md-4"></div>
            </div>
        </form>
    </div>
</section>

